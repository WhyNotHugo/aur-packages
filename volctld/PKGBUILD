# Maintainer: Hugo Osvaldo Barrera <hugo@osvaldobarrera.com.ar>
pkgname=volctld
_pkgcommit=77381204dad0a018599f1802e4c678888fec45d2
pkgver=2.0.1r${_pkgcommit}
pkgrel=1
pkgdesc="A volume control daemon designed to work with a Logitech Performance MX"
arch=('any')
url="https://github.com/hobarrera/volctl2"
license=('BSD')
depends=('python2-notify' 'pygtk' 'python2-xlib' 'python-pyalsaaudio')
makedepends=('python2')
source=("https://github.com/hobarrera/${pkgname}/tarball/${_pkgcommit}"
        volctld.service)
md5sums=('8cf2d36175b835a965423afef2380dba'
         'ffd7ae27475c705ce605930d39f44a58')

package() {
  cd "$srcdir/hobarrera-$pkgname-${_pkgcommit:0:7}"
  python2 setup.py install --root="$pkgdir/" --optimize=1

  cd "$srcdir"
  install -Dm 644 volctld.service "$pkgdir/usr/share/systemd/user/volctld.service"
}
