# Maintainer: Hugo Osvaldo Barrera <hugo@barrera.io>

# Since you need to purchase this game, you'll need to place the zip
# file provided in the same directory as this PKGBUILD in order to build
# this package.

pkgname=legendofdungeon
pkgver=AlphaNymph
pkgrel=1
pkgdesc="A 4 Player Co-op Rogue-Like-like Beat'em'up with Dynamic Lighting on AWESOME Pixel Art."
arch=("x86_64")
url="http://www.robotloveskitty.com/LoD/"
license=('custom')
depends=()
makedepends=("unzip")
source=(LegendofDungeon-Linux-${pkgver}.zip::)
md5sums=('679161abd18634d7c1ffe8320311cd09')

package() {
  cd "$srcdir/LegendofDungeon-Linux"

  if [[ $CARCH == i686 ]]; then
    install -Dm 755 LegendofDungeon.x86 "${pkgdir}/opt/LegendofDungeon/LegendofDungeon"
  else
    install -Dm 755 LegendofDungeon.x86_64 "${pkgdir}/opt/LegendofDungeon/LegendofDungeon"
  fi

  find LegendofDungeon_Data -type f -exec install -Dm 644 {} "${pkgdir}/opt/LegendofDungeon/{}" \;

  install -d "${pkgdir}/usr/bin/"
  ln -s "${pkgdir}/opt/LegendofDungeon/LegendofDungeon" "${pkgdir}/usr/bin/legendofdungeon"
}
