# Maintainer: Hugo Osvaldo Barrera <hugo@osvaldobarrera.com.ar>

pkgname=hobarrera-sudo
pkgver=1
pkgrel=1
pkgdesc="sudo configuration files."
arch=(any)
license=('BSD')
groups=(hobarrera)
source=(wheel.conf)
md5sums=('7d0227545febdbf382dd014b6bdde75e')

package() {
  install -Dm 440 wheel.conf "${pkgdir}/etc/sudoers.d/wheel"
  chmod 750 "${pkgdir}/etc/sudoers.d/"
}
