# Maintainer: Hugo Osvaldo Barrera <hugo@osvaldobarrera.com.ar>

pkgname=hobarrera-xconf
pkgver=1
pkgrel=1
pkgdesc="Xorg configuration files."
arch=(any)
license=('BSD')
groups=(hobarrera)
source=(01-keyboard-layout.conf
        10-ctrl-alt-bksp.conf
        50-mouse-acceleration.conf)
md5sums=('330b5012bd2c4fc7dbf0749cdd490d40'
         '4e78e0ef5fe0dd5097459222871dee8c'
         '11ccc2d1087a6eef22424bebd9ab5664')

package() {
  install -Dm 644 01-keyboard-layout.conf "${pkgdir}/etc/X11/xorg.conf.d/01-keyboard-layout.conf"
  install -Dm 644 10-ctrl-alt-bksp.conf "${pkgdir}/etc/X11/xorg.conf.d/10-ctrl-alt-bksp.conf"
  install -Dm 644 50-mouse-acceleration.conf "${pkgdir}/etc/X11/xorg.conf.d/50-mouse-acceleration.conf"
}
