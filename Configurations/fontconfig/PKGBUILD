# Maintainer: Hugo Osvaldo Barrera <hugo@osvaldobarrera.com.ar>

pkgname=hobarrera-fontconfig
pkgver=1
pkgrel=1
pkgdesc="Fontconfig configuration files."
arch=(any)
license=('BSD')
groups=(hobarrera)
source=(99-my-font-configuration.conf)
md5sums=('daa790663fe0fdb0704c55085a973f67')

package() {
  install -Dm 644 99-my-font-configuration.conf "${pkgdir}/etc/fonts/conf.d/99-my-font-configuration.conf"
  ln -sf /etc/fonts/conf.avail/10-autohint.conf "${pkgdir}/etc/fonts/conf.d"
  ln -sf /etc/fonts/conf.avail/10-sub-pixel-rgb.conf "${pkgdir}/etc/fonts/conf.d"
}
