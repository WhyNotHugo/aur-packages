# Maintainer: Hugo Osvaldo Barrera <hugo@osvaldobarrera.com.ar>
pkgname=volctl2
pkgver=2.1
pkgrel=1
pkgdesc="A volume control daemon."
arch=('any')
url="https://github.com/hobarrera/volctl2"
license=('BSD')
depends=('python2-notify' 'pygtk' 'python2-xlib' 'python-pyalsaaudio')
makedepends=('python2')
source=("https://github.com/hobarrera/${pkgname}/archive/v${pkgver}.zip"
        volctld.service)
md5sums=('7cd07cd40827039aa81290cc88799e47'
         'ffd7ae27475c705ce605930d39f44a58')

package() {
  cd "$srcdir/${pkgname}-${pkgver}"
  python2 setup.py install --root="$pkgdir/" --optimize=1

  install -Dm 644 "${srcdir}/volctld.service" "$pkgdir/usr/share/systemd/user/volctld.service"
}
