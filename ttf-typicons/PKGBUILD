pkgname=ttf-typicons
pkgver=1.0
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="Free-to-use vector icons embedded."
arch=('any')
license=("CC BY-SA 3.0")
source=(http://typicons.com/src/typicons_kit.zip)
md5sums=('b41adfb6d0882b5353e56329e294c3dc')
install=$pkgname.install
url="http://typicons.com/"

package() {
  install -Dm 644 "${srcdir}/typicons_kit/fonts/typicons-regular-webfont.ttf" "${pkgdir}/usr/share/fonts/TTF/typicons-regular-webfont.ttf"
}
