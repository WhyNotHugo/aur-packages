pkgname=openntpd-fast
pkgver=3.9p1
pkgrel=1
pkgdesc="Systemd script for openntpd that boots faster by not blocking while the time is updated"
arch=("any")
url="http://www.openntpd.org/"
license=('BSD')
depends=("openntpd")
source=("openntpd-fast.service")
md5sums=('787d5025ff04ce426b285344e29a4574')

package() {
  install -Dm644 "$srcdir/openntpd-fast.service" "$pkgdir/usr/lib/systemd/system/openntpd-fast.service"
}
