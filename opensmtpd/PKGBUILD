# Maintainer Brad Arrington

pkgname=opensmtpd
pkgver=201205220027
pkgrel=1
pkgdesc="OpenSMTPD"
arch=(i686 x86_64)
url="http://www.opensmtpd.org/"
license=('BSD')
conflicts=('sendmail' 'postfix')
options=(!strip)
backup=("etc/mail/smtpd.conf")
source=(http://www.opensmtpd.org/archives/${pkgname}-${pkgver}.tar.gz
	bootstrap.patch)
md5sums=('adf5289a389740a165bae1ff59a886ad'
         'aa56e5586f1e5a8bb0a919ea8e66984c')

build() {
  cd "$srcdir/$pkgname"

  patch -p1 < $srcdir/bootstrap.patch 

  ./bootstrap
  ./configure --prefix=/usr --sysconfdir=/etc

  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir/" install
}

