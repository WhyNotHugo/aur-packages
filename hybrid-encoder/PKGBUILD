pkgname=hybrid-encoder
pkgver=110821_2
pkgrel=2
pkgdesc="A very complete gui for video encoding"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('libvpx' 'x264' 'mediainfo' 'ffmpeg' 'mplayer' 'gpac' 'mkvtoolnix' 'sox' 'vorbis-tools' 'lsdvd' 'tsmuxer' 'neroaacenc' 'aften' 'mp4fpsmod')
url="http://www.selur.de/"
if test "$CARCH" == x86_64; then
  source=(http://www.selur.de/sites/default/files/hybrid_downloads/Hybrid_${pkgver}_64bit_binary.zip
          hybrid-encoder.desktop
          hybrid-encoder.png)
  md5sums=('225bd80c6ad4f14f9b0604c5f80d5f55'
           '02c1f929a454891274b3b5711270273c'
           '798dd936a3bc9bcd3b131d5dd6db96e6')
fi
if test "$CARCH" == i686; then
  source=(http://www.selur.de/sites/default/files/hybrid_downloads/Hybrid_${pkgver}_binary.zip
          hybrid-encoder.desktop
          hybrid-encoder.png)
  md5sums=('ae075da89a68472d4dcfaa74164df5cf'
           '02c1f929a454891274b3b5711270273c'
           '798dd936a3bc9bcd3b131d5dd6db96e6')
fi

build() {
  cd "${srcdir}"

  install -D -m755 Hybrid "${pkgdir}/usr/bin/hybrid-encoder"
  install -D -m755 FrameCounter "${pkgdir}/usr/bin/FrameCounter"
  install -D -m644 hybrid-encoder.desktop "${pkgdir}/usr/share/applications/hybrid-encoder.desktop"
  install -D -m644 hybrid-encoder.png "${pkgdir}/usr/share/pixmaps/hybrid-encoder.png"
}
