# Maintainer: Hugo Osvaldo Barrera <hugo@barrera.io>
# Contributor: Andrew Bibb <ajbibb@myfairpoint.net>
pkgname=cmst-git
_pkgname=cmst
pkgver=latest
pkgrel=1
pkgdesc="A QT based GUI front end for the connman connection manager with systemtray icon"
arch=('i686' 'x86_64')
url="https://github.com/andrew-bibb/cmst"
license=('MIT')
provides=('cmst')
conflicts=('cmst')
depends=('qt5-base' 'connman' 'libxkbcommon-x11')
source=("cmst::git+https://git@github.com/andrew-bibb/cmst.git")
md5sums=(SKIP)

pkgver() {
  cd "$srcdir/$_pkgname"
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build() {
    cd "$srcdir/$_pkgname"
    qmake-qt5 
    make 
}


package() {
    cd "$srcdir/$_pkgname"
    make INSTALL_ROOT="$pkgdir/" install
}

