# Maintainer: Hugo Osvaldo Barrera <hugo@barrera.io>

pkgname=python2-vdirsyncer
_pkgname=vdirsyncer
pkgver=0.2.1
pkgrel=1
pkgdesc="Synchronize CalDAV and CardDAV."
arch=('any')
url="https://github.com/untitaker/vdirsyncer"
license=('MIT')
depends=('python2-argvard' 'python2-setuptools' 'python2-lxml' 'python2-icalendar' 'python2-requests-toolbelt')
source=("https://github.com/untitaker/${_pkgname}/archive/${pkgver}.zip")
md5sums=('73a2392f70cbc5feb2a1aaff4567e81c')

build() {
  cd "$srcdir/${_pkgname}-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/${_pkgname}-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

