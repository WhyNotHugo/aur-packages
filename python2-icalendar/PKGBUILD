# Maintainer: Hugo Osvaldo Barrera <hugo@barrera.io>

pkgname=python2-icalendar
_pkgname=icalendar
pkgver=3.6.2
pkgrel=1
pkgdesc="icalendar parser library for Python."
arch=('any')
url="http://pygal.org/"
license=('LGPL3')
depends=('python2' 'python2-pytz')
source=("https://pypi.python.org/packages/source/i/${_pkgname}/${_pkgname}-${pkgver}.zip")
md5sums=('e815c0bbef1097713555925235af0630')

build() {
  cd "$srcdir/${_pkgname}-$pkgver"
  python2 setup.py build
}

package() {
  cd "$srcdir/${_pkgname}-$pkgver"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

